# setMark not working as expected
# TODO: alt-w is Copy, todo: cut
{
    "~d" = "deleteWordForward:";
    "^w" = "deleteWordBackward:";
    "^ " = "setMark:";
    "~f" = "moveWordForward:";
    "~b" = "moveWordBackward:";
    "~B" = "moveWordBackwardAndModifySelection:";
    "~F" = "moveWordForwardAndModifySelection:";
}
